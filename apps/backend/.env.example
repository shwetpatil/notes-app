# Backend Environment Configuration

# ============================================================================
# Server Configuration
# ============================================================================
BACKEND_PORT=3001
NODE_ENV=development

# HTTPS Configuration (optional)
ENABLE_HTTPS=false
# SSL_KEY_PATH=/path/to/private-key.pem
# SSL_CERT_PATH=/path/to/certificate.pem

# ============================================================================
# Database
# ============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/notes_db"

# ============================================================================
# Security
# ============================================================================
SESSION_SECRET=your-secret-key-change-this-in-production
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Body Parser Limits
BODY_PARSER_LIMIT=10mb

# ============================================================================
# Performance & Monitoring
# ============================================================================
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_METRICS_COLLECTION=true

# Sentry Error Tracking
# Get your DSN from https://sentry.io/settings/[org]/projects/[project]/keys/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1
# SENTRY_PROFILES_SAMPLE_RATE=0.1

# ============================================================================
# Redis Cache (Advanced Features)
# ============================================================================
REDIS_URL=redis://localhost:6379
# Or with authentication:
# REDIS_URL=redis://:password@localhost:6379
# Redis Cloud:
# REDIS_URL=redis://username:password@redis-host:port

# ============================================================================
# WebSocket Configuration
# ============================================================================
FRONTEND_URL=http://localhost:3000

# ============================================================================
# Vertical Scaling (Advanced)
# ============================================================================
# Cluster Mode (set to "true" to enable multi-core processing)
CLUSTER_MODE=false

# Maximum number of worker processes (defaults to CPU cores)
# MAX_WORKERS=4

# Memory Monitoring
# ENABLE_MEMORY_MONITORING=true
# MEMORY_THRESHOLD_MB=512
# NODE_OPTIONS=--max-old-space-size=2048
