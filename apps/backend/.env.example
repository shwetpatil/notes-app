# Backend Environment Configuration

# Server Configuration
BACKEND_PORT=3001
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/notes_db"

# Security
SESSION_SECRET=your-secret-key-change-this-in-production
CORS_ORIGIN=http://localhost:3000

# ============================================================================
# Vertical Scaling Configuration
# ============================================================================

# Cluster Mode (set to "true" to enable multi-core processing)
CLUSTER_MODE=false

# Maximum number of worker processes (defaults to number of CPU cores)
# Recommended: CPU cores - 1 (leave one for system)
MAX_WORKERS=4

# Memory Monitoring
ENABLE_MEMORY_MONITORING=true
MEMORY_THRESHOLD_MB=512

# Node.js Memory Configuration (uncomment to set heap size limit)
# NODE_OPTIONS=--max-old-space-size=2048

# ============================================================================
# Additional Configuration
# ============================================================================

# Monitoring & Performance
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_METRICS_COLLECTION=true
ENABLE_WEB_VITALS_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per window

# Body Parser Limits
BODY_PARSER_LIMIT=10mb
