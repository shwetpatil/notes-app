{
  "name": "@notes/backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:cluster": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:cluster": "node dist/index.js",
    "clean": "rm -rf dist",
    "db:setup": "docker run --name notes-postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=notes_db -p 5432:5432 -d postgres:16 || docker start notes-postgres",
    "db:start": "docker start notes-postgres",
    "db:stop": "docker stop notes-postgres",
    "db:shell": "docker exec -it notes-postgres psql -U postgres -d notes_db",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force --skip-seed",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@notes/types": "workspace:*",
    "@prisma/client": "^5.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "markdown-it": "^14.1.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "puppeteer": "^24.33.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.10",
    "@vitest/coverage-v8": "^4.0.15",
    "bcrypt": "^6.0.0",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "validator": "^13.15.23",
    "vitest": "^4.0.15",
    "xss": "^1.0.15"
  }
}
