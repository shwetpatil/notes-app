{
  "name": "@notes/backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:cluster": "CLUSTER_MODE=true tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:cluster": "CLUSTER_MODE=true node dist/index.js",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t notes-backend .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "docker:shell": "docker exec -it notes-postgres psql -U postgres -d notes_db",
    "docker:setup": "docker run --name notes-postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=notes_db -p 5432:5432 -d postgres:16 || docker start notes-postgres",
    "docker:start": "docker start notes-postgres",
    "docker:stop": "docker stop notes-postgres",
    "docker:remove": "docker stop notes-postgres && docker rm notes-postgres",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f backend",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force --skip-seed",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@notes/types": "workspace:*",
    "@prisma/client": "^5.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.10",
    "@vitest/coverage-v8": "^4.0.15",
    "bcrypt": "^6.0.0",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "validator": "^13.15.23",
    "vitest": "^4.0.15",
    "xss": "^1.0.15"
  }
}
